@model List<EntreHojas.BL.Producto>

@{
    ViewBag.Title = "Index";
}

<h2>Libros</h2>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                Item
            </th>
            <th>
                Nombre de Libros
            </th>
            <th>
                Autor
            </th>
            <th>
                Precio
            </th>
            <th>
                Inventario
            </th>
        </tr>
    </thead>
    @foreach (var producto in Model)
    {
        <tr>
            <td>@producto.Id</td>
            <td>@producto.Descripcion</td>
            <td>@producto.Autor</td>
            <td>@producto.Precio</td>
            <td>@producto.Existencia</td>
        </tr>
    }
</table>